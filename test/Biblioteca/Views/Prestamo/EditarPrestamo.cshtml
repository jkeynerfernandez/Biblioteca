@{
    ViewBag.Title = "Actualizar prestamo";
    ViewBag.Css = "form.css";
}

<div class="container-main">
    <div class="container-form">
    <h2>Actualizar prestamo</h2>
         <div class="mb-3">
            <label for="titulo"  class= "form-label">Título Libro:</label><br>
            <input type="text" id="titulo" name="titulo" class="form-control" placeholder="Cien años de soledad">
        </div>
        <div class="mb-3">
            <label for="autor"  class= "form-label">Bibliotecario:</label><br>
            <input type="text" id="autor" name="autor" class="form-control" placeholder="Gabriel García Márquez">
        </div>
        <div class="mb-3">
            <label for="genero"  class= "form-label">Usuario:</label><br>
            <input type="text" id="genero" name="genero" class="form-control" placeholder="Realismo mágico">
        </div>
        <div class="mb-3">
            <label for="fecha_devolucion" class="form-label">Fecha de Prestamo</label>
            <input type="date" id="fecha_prestamo" name="fecha_prestamo" required>
        </div>
        <div class="mb-3">
            <label for="fecha_devolucion" class="form-label">Fecha de Devolución</label>
            <input type="date" id="fecha_devolucion" name="fecha_devolucion" required>
        </div>
    </div>
    <a class="btn-crear" asp-controller="Prestamo" asp-action="Index">Actualizar</a>
</div>